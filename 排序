#include<iostream>
using namespace std;
int main() {
	float t = 0.0;
	int r = 0;
	float hight[10] = { 0 };
	for (int i = 0; i < 10; i++) {
		cout << "请输入第" << i + 1 << "位同学身高" << endl;
		cin >> hight[i];
	}
	for (int r = 9; r > 0; r--) {
		for (int i = 0; i < r; i++) {
			if (hight[i] > hight[i + 1]) {
				t = hight[i + 1];
				hight[i + 1] = hight[i];
				hight[i] = t;
			}

		}
	}
	cout << "由低到高排序为：" << endl;
	int k = 0;
	while (k < 10) {
	cout << hight[k] <<",";
	k++;
	}
	return 0;
}

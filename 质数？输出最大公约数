#include <iostream>
using namespace std;
int find(int a);
int main() {
	int a = 0;
	do {
	cout << "请输入一个正整数" << endl;
	cin >> a;
	} while (a <= 0);
	int result = find(a);//可避免重复调用,与下面这个相比
  /*if (find(a) == 0)
        cout << "是质数" << endl;
    else
        cout << "不是质数，最大的约数是" << find(a) << endl;*/
	if (result== 1)
		cout << "是" << endl;
	else
		cout << "不是，最大的约数是" << result<< endl;

}
int find(int a) {
	for (int i = a - 1; i > 1; i--) {
		if (a % i == 0)return i;


	}
	return 1;


}

//更加集中的版本，都在函数里
#include <iostream>
using namespace std;
void find(int a);
int main() {
	int a = 0;
	do {
	cout << "请输入一个正整数" << endl;
	cin >> a;
	} while (a <= 0);
	find(a);
	
		

		
	return 0;
}
void find(int a) {
	for (int i = a - 1; i > 1; i--) {
		if (a % i == 0) {
			cout << "不是，最大的约数是" << i << endl;
			return;

		}
	}
	cout << "是" << endl;


}


//类似的改了个判断水仙花数的
#include <iostream>
using namespace std;
void find(int a);
int main() {
	int a = 0;
	do {
		cout << "请输入一个3位数" << endl;
		cin >> a;
	} while (a <= 0);
	find(a);




	return 0;
}
void find(int a) {
	int i = a %10;
	int j = (a %100 - i)/10;
	int k = (a - 10 * j - 1 * i)/100;//或k=a/100;就中间的不好搞，头->除int自然取整消去小数，尾->取于，自然留下
		if (i*i*i+j*j*j+k*k*k==a) {
			cout << "是" << endl;
		}
		else
		{
			cout << "不是" << endl;
		}
}

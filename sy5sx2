#include <iostream>
#include <windows.h>  // 添加Windows头文件用于系统功能
using namespace std;

int main()
{
    while (1) {
        system("cls");    // Windows清屏命令
        cout << "\n\n\n\n\n";
        cout << "\t\t|---------------学生选课系统(学生版)------------|" << endl;
        cout << "\t\t|\t 0. 退出                               |" << endl;
        cout << "\t\t|\t 1. 学生信息管理                       |" << endl;
        cout << "\t\t|\t 2. 教师信息管理                       |" << endl;
        cout << "\t\t|\t 3. 课程信息管理                       |" << endl;
        cout << "\t\t|\t 4. 学生选课管理                       |" << endl;
        cout << "\t\t|\t 5. 学生成绩管理                       |" << endl;
        cout << "\t\t|\t 6. 信息统计模块                       |" << endl;
        cout << "\t\t|-----------------------------------------------|" << endl;
        cout << endl;
        cout << "\t\t\t请输入模块编号(0-6):";

        // 添加用户输入处理
        int choice;
        cin >> choice;

        // 简单的选择处理（可根据需要扩展）
        switch (choice) {
        case 0:
            cout << "0.退出" << endl;
            break;
        case 1:
            cout << "1.学生信息管理模块..." << endl;
            // 这里可以调用学生信息管理函数
            break;
        case 2:
            cout << "2.教师信息管理模块..." << endl;
            // 这里可以调用教师信息管理函数
            break;
        case 3:
            cout << "3.课程信息管理模块..." << endl;
            // 这里可以调用课程信息管理函数
            break;
        case 4:
            cout << "4.学生选课管理模块..." << endl;
            // 这里可以调用学生选课管理函数
            break;
        case 5:
            cout << "5.学生成绩管理模块..." << endl;
            // 这里可以调用学生成绩管理函数
            break;
        case 6:
            cout << "6.信息统计模块..." << endl;
            // 这里可以调用信息统计函数
            break;
        default:
            cout << "请输入0-6之间的数字！" << endl;
        }
        
        if (choice == 0)break;
        system("pause");
        continue;
    }
    system("pause");  // Windows暂停命令
    return 0;
}
